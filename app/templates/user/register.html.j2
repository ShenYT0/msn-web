{% extends "page.html.j2" %}

{% block content %}
<p>
    As-tu déjà un compte ?
    <a href="{{ url_for('login') }}">Connectes-toi</a>.
</p>

<form method="post">
    {{ form.hidden_tag() }}
    <div class="input">
        <label for="{{ form.login.id }}">Identifiant</label>
        {{ form.login }}
        {{ form.login.errors }}
    </div>
    <div class="input">
        <label for="{{ form.password.id }}">Mot de passe</label>
        {{ form.password }}
        {{ form.password.errors }}
    </div>
    <button type="submit">S'inscrire</button>
</form>

<p>
    <a href="{{ url_for('discord_login')}}" class="button discord">
        Se connecter avec Discord
    </a>
</p>
{% endblock content %}

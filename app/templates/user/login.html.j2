{% extends "page.html.j2" %}

{% block content %}
<form method="post">
    {{ form.hidden_tag() }}
    <div class="input">
        <label for="{{ form.login.id }}">Identifiant</label>
        {{ form.login }}
        {{ form.login.errors }}
    </div>
    <div class="input">
        <label for="{{ form.password.id }}">Mot de passe</label>
        {{ form.password }}
        {{ form.password.errors }}
    </div>
    <button type="submit">Se connecter</button>
</form>

<p>
    <a href="{{ url_for('discord_login')}}" class="button discord">
        Se connecter avec Discord
    </a>
</p>

<p>
    Vous n'avez pas de compte ?
    <a href="{{ url_for('register') }}">Inscrivez-vous</a>.
</p>
{% endblock content %}

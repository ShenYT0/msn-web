{% extends "page.html.j2" %}

{% block content %}
        {% if app.debug %}
        <code>
        {{ events | e }}
        </code>
        {% endif %}

        <div id="events">
            {% set future_events = events | selectattr("is_past", "false") %}
            {% set past_events = events | selectattr("is_past", "true") %}
            <h2>Les prochains évènements</h2>
            <div class="future-events">
                {% for event in future_events %}
                {% include "components/event_card.html.j2" %}
                {% endfor %}
                {% if not future_events %}
                <p>
                    Aucun évènement n'est prévu pour le moment.
                </p>
                {% endif %}
            </div>
            <h2>Les évènements passés</h2>
            <div class="past-events">
                {% for event in events | selectattr("is_past", "true") %}
                {% include "components/event_card.html.j2" %}
                {% endfor %}
        </div>
{% endblock %}
